# Anthropic API Key (required)
# Get yours at: https://console.anthropic.com/
ANTHROPIC_API_KEY=sk-ant-api03-xxx

# Pinecone API Key (required)
# Get yours at: https://app.pinecone.io/
PINECONE_API_KEY=xxx

# Pinecone Index Settings
PINECONE_INDEX_NAME=rag-index
PINECONE_CLOUD=aws
PINECONE_REGION=us-east-1

# Optional: Anthropic model (default: claude-sonnet-4-5-20250514)
ANTHROPIC_MODEL=claude-sonnet-4-5-20250514

# Optional: Hybrid Search Settings
USE_HYBRID_SEARCH=true
BM25_WEIGHT=0.3
VECTOR_WEIGHT=0.7

# Optional: API Key for indexing endpoint (for security)
INDEX_API_KEY=your-secret-key-here
